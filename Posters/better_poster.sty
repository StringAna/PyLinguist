\newcommand{\makefinding}[2]{ % Now takes two parameters: #1 for the logo and #2 for the text
    \vspace*{-1cm} % Remove random white space
    \noindent\makebox[\linewidth][c]{%
      \colorbox{exp}{%
        \parbox[t][\headerheight\paperheight][c]{\paperwidth}{%
          \hspace*{\dimexpr\hoffset+\oddsidemargin+1in\relax}%
          \begin{minipage}[c]{0.2\textwidth} % Adjust this width as needed for your logo size
            \includegraphics[height=4cm, keepaspectratio]{#1} % Increase logo height as needed
          \end{minipage}%
          \begin{minipage}[c]{0.8\textwidth} % Adjust the text width as well
            \textcolor{white}{
              {\fontsize{36}{50}\selectfont
              \begin{center}
                \nohyphens{#2} % Your text message
              \end{center}
              }
            }
          \end{minipage}%
        }%
      }%
    }\par\medskip
}




